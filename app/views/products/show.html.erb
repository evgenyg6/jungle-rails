<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
        </dl>
      </div>
    </div>
</article>
    <% @reviews.each do |eachReview| %>
      <div>
      <% user =  User.find(eachReview.user_id) %>
      <dt>User:</dt>
      <dd><%= user.first_name%> <%= user.last_name%></dd>
      <dt>Review:</dt>
      <dd><%= eachReview.description %></dd>
      <dt>Rating:</dt>
      <dd><%= eachReview.rating %>/5</dd>
      <dt>Date:</dt>
      <dd><%= eachReview.created_at %></dd>
      </div>
      <% end %>

       <h2>Add a review!<h2>
      <%= form_for [@product, @product.reviews.build] do |f| %>
        <p>
          <%= f.label :rating %><br>
          <%= f.select (:rating) do %>
            <% [['1: Poor', 1], ['2: Needs Improvment', 2],['3: Average', 3], ['4: Good', 4], ['5: Excellent', 5]].each do |rating| %>
              <%= content_tag(:option, rating.first, value: rating.last) %>
            <% end %>
          <% end %>
        </p>
        <p>
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
    </div>
</section>